<configuration>
 
  <!-- Site specific YARN configuration properties -->
  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
  </property>
  <property>
    <name>yarn.resourcemanager.hostname</name>
    <!-- KW: resource mamanger ip address -->
    <value>10.10.1.3</value>
  </property>
  <property>
    <name>yarn.nodemanager.resource.memory-mb</name>
    <!-- KW: total memory each node manager has -->
    <value>30000</value>
  </property>
  <property>
    <name>yarn.scheduler.minimum-allocation-mb</name>
    <!-- KW: minimum memory given to each container request-->
    <value>1000</value>
  </property>
  <property>
    <name>yarn.scheduler.maximum-allocation-mb</name>
    <!-- KW: maximum memory given to each container request-->
    <value>10000</value>
  </property>
  <property>
    <name>yarn.nodemanager.resource.cpu-vcores</name>
    <!-- KW: total number of cores each node manager has -->
    <value>4</value>
  </property>
  <property>
    <name>yarn.scheduler.minimum-allocation-vcores</name>
    <!-- KW: minimum cores given to each container request-->
    <value>1</value>
  </property>
  <property>
    <name>yarn.scheduler.maximum-allocation-vcores</name>
    <!-- KW: maximum cores given to each container request-->
    <value>4</value>
  </property>

 
</configuration>
